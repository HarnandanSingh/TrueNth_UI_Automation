{
  "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "*": [ "./*", "types/*" ],
        "src/*": ["./src/*"]
    },
    "rootDir": "./", // to keep folder structure on compiling
    "types": ["node", "@wdio/sync", "@wdio/mocha-framework"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "declaration": false,
    "noImplicitAny": false,
    "outDir": "js"
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "node_modules",
    "asyncAwait",
    "plugins.ts"
  ]
}