    "version": "0.2.0",
    "configurations": [
        {
            "name": "Wdio Debugger",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "test:local"
            ],
            "port": 5859,
            "protocol": "inspector", 
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/test.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}